<html>
  <head>
    <link rel="stylesheet" href="/css/global.css">
    <meta content="width=device-width,initial-scale=1.0" name="viewport">
  </head>
  
  <body>
    <div class="content">
	  <div class="posts">
	  {{#each posts}}
		<div class="post">
		  <div class="post_header">
			<h2 class="title">{{title}}</h2>
			<div class="sub">
			  <span class="user_attribution">by <a href="#">{{user}}</a></span>
			  <span>//</span>
			  <span class="post_stats">
				<a href="#">{{comments}}</a> 路 
				<a href="#">{{likes}}</a> <a><span class="likes"></span></a> 路 
				<a href="#">{{time}}</a>
			  </span>
		    </div>
		  </div>
		  <img class="post_img" src="{{img}}">
		  <div class="post_caption">
		    <p>{{caption}}</p>
		  </div>
		  <div class="post_tags">
		    <span style="font-weight: bold;">TAGS</span>
		    <span class="tag"><a href="#">hip</a>,</span>
		    <span class="tag"><a href="#">fun</a>,</span>
		    <span class="tag"><a href="#">sleek</a>,</span>
		    <span class="tag"><a href="#">out</a>,</span>
		    <span class="tag"><a href="#">dress</a></span>
		  </div>
		  <div class="post_interact">
		    <span class="add_button"></span>
	        <span class="like_button"></span>
	        <div class="clear"></div>
		  </div>
		</div>
	  {{/each}}
		
